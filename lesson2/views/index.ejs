<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')  %>
<body>
    <section class="main_page">
        <%- include('./partials/nav.ejs')  %>

        <div class="hero">
            <h1>EcodeJR's</h1>
            <h3>Blog</h3>
        </div>
        <div class="content">
            <h1>All Blogs</h1>

            <div class="blogs_list">
                    <%  if(blogs.length > 0) { %>
                        <%  blogs.forEach(blog => {   %>
                            <div class="blog_item">
                                <h3><%=  blog.title  %></h3>
                                <p><%=  blog.snippet  %></p>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="blog_item">
                            <p>You've not added any blogs :(</p>
                        </div>
                    <% } %>
            </div>
            
        </div>
        <%- include('./partials/footer.ejs')  %>
    </section>
</body>
</html>